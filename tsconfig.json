{
  "compilerOptions": {
    "types": ["jest", "node"],
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "allowJs": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "declaration": true,
    "sourceMap": true,
    "target": "es2015",
    "lib": [  "es2015", "dom"],
    "outDir": "./dist",
  },
  "exclude": ["__test__"]
}
